                <version>0.0.3-SNAPSHOT</version>
                <type>pom</type>
                <scope>test</scope>
            </dependency>
            <dependency>
                <groupId>org.divy</groupId>
                <artifactId>bo-framework-repository</artifactId>
                <version>0.0.3-SNAPSHOT</version>
            </dependency>
            <dependency>
                <groupId>org.divy</groupId>
                <artifactId>bo-framework-mapper</artifactId>
                <version>0.0.3-SNAPSHOT</version>
            </dependency>
            <dependency>
                <groupId>org.divy</groupId>
                <artifactId>bo-framework-bo-mock-common</artifactId>
                <version>0.0.3-SNAPSHOT</version>
            </dependency>
            <dependency>
                <groupId>org.divy</groupId>
                <artifactId>bo-framework-database</artifactId>
                <version>0.0.3-SNAPSHOT</version>
            </dependency>
            <dependency>
                <groupId>org.divy</groupId>
                <artifactId>bo-framework-endpoint</artifactId>
                <version>0.0.3-SNAPSHOT</version>
            </dependency>
            <dependency>
                <groupId>org.divy</groupId>
                <artifactId>bo-framework-database-mock</artifactId>
                <version>0.0.3-SNAPSHOT</version>
            </dependency>
            <dependency>
                <groupId>org.divy</groupId>
                <artifactId>bo-framework-database-template</artifactId>
                <version>0.0.3-SNAPSHOT</version>
                <type>pom</type>
            </dependency>
            <dependency>
                <groupId>org.divy</groupId>
                <artifactId>bo-framework-endpoint-template</artifactId>
                <version>0.0.3-SNAPSHOT</version>
                <type>pom</type>
            </dependency>
            <dependency>
                <groupId>org.divy</groupId>
                <artifactId>bo-framework-businessapi</artifactId>
